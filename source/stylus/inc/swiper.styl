.swiper {
	&-button-prev.important,
	&-button-next.important {
		margin 0
		width 31px
		height 31px
		border 1px solid $color-purple
		border-radius 50%
		transform translate(0, -50%)
		background none
		stroke $color-purple

		&:hover {
			background $color-purple
			stroke white
		}
	}

	&-slide.active {
		border 1px solid $color-blue
	}

	&-pagination.important {
		position static

		.swiper-pagination-bullet {
			width 11px
			height 11px
			margin 0 3px
			border 1px solid $color-telegrays
			background #E8E8E8
			transform none

			&-active {
				width 13px
				height 13px
				border none
				background $color-purple
			}
		}
	}
}
