.s-header {
	&__container {
		display grid
		grid-gap 10px
		grid-template-columns auto auto
		justify-content space-between		
		align-items center
		padding 15px
		background linear-gradient(0deg, #FFFFFF, #FFFFFF), #F2F4F8
		
		@media (min-width 600px) {
			grid-template-areas '. .' 'nav nav'	
			grid-template-columns auto 175px
		}
		
		@media (min-width 992px) {
			grid-template-areas unset
			grid-template-columns auto auto auto
		}
		
		container()
	}
	
	&__column {
		
		&_burger {
			display block
			
			@media (min-width 600px) {
				display none
			}
		}
		&_logo {
		}
		
		&_nav {
			display none
			grid-area nav
			
			@media (min-width 600px) {
				display block
			}
			
			@media (min-width 992px) {
				grid-area initial
			}
		}
		
		&_button {
			display none
			
			@media (min-width 600px) {
				display block
			}
		}
	}
	
	&__burger {
		stroke black
		border none
		padding 5px
		background yellow
