}

.gallery-slider {
	&__pr {
		margin-bottom 5px

		@media (min-width 480px) {
			margin-bottom 10px
		}
	}

	&__thumbs {
		position relative
		padding 0 50px
	}
	
	&__prev,
	&__next {
		position absolute
		top 50%
		transform translate(0, -50%)
		z-index 25
	}
	
	&__prev {
		left 0
	}
	
	&__next {
		right 0
	}
}

.g-gallery {
	display grid
	grid-template-columns 1fr 1fr
