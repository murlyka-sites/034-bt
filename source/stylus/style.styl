			&:hover {
				background #1E1A08
				color white
			}
		}
		
		&_black {
			background black
			color #f2f2f2
			
			&:hover {
				background lighten(black, 10%)
			}
		}
		
		&_yellow {
			background #FEED00
			
			&:hover {
				background darken(#FEED00, 7%)
			}
			
			&:active {
				background lighten(#FEED00, 10%)
				box-shadow none
			}
		}
	}
	
	&__icon {
		margin-right 10px 
