*,
*::after,
*::before {
	box-sizing border-box
}

.clearfix {
	&::after {
		content: "";
		display: table;
		clear: both;
	}
}

.rotate {
	
	&-180 {
		transform-origin center
		transform rotate(180deg)
	}
}

.list-icons {
	display grid
	align-items center
	
	&_small {
		grid-template-columns 20px auto
		grid-gap 15px
		font-size 15px 
	}
	
	&_medium {
		grid-template-columns 30px auto
		grid-gap 20px 30px
